extends layout

block content
  div(class="page-container")
    h1(class="page-heading") Message Board
    form(method="post", class="submit-container")
      span(class="input-text-container") 
        input(type="text" class ="author-input" placeholder="Enter name..." name="author")
        |    Leave field blank to make an anonymous post
      textarea(name="content", cols="30", rows="10", placeholder="Enter text here...", value="")
      button(type="submit") Submit
    h3 #{title}
    ul(class="posts-list")
      span(class="sort-links") Sort By: 
        a(href="/" class="sort-link") Most Recent
        span() |
        a(href="/?value=votes&sort=desc" class="sort-link") Most Votes
      each post in posts 
        li(class="post" id=post.id)
          a(href=`/author/${post.author}/post/${post.id}` class="edit-link") &#9998
          div(class="vote-container")
            form(method="post" action=`/author/${post.author}/post/${post.id}/upvote`)
              button(type="submit") &#8593
            if post.votes < 0 
              p(class="negative-votes") #{post.votes}
            else if post.votes === 0
              p #{post.votes}
            else 
              p(class="positive-votes") #{post.votes}
            form(method="post" action=`/author/${post.author}/post/${post.id}/downvote`)
              button(type="submit") &#8595
          div(class="post-message") 
            p #{post.content}
          div(class="post-info")
            p 
              |Posted by 
              a(href=`/author/${post.author}` class="author-link") #{post.author} 
              |at #{post.created_at}