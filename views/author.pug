extends layout

block content
  div(class="page-container")
    h3 #{title}
    a(href="/api") &#8592 Back
    ul(class="posts-list")
      span(class="sort-links") Sort By: 
          a(href=`/api/author/${author}` class="sort-link") Most Recent
          span() |
          a(href=`/api/author/${author}/?value=votes&sort=desc` class="sort-link") Most Votes
      each post in posts 
        li(class="post" id=post.blog_id)
          a(href=`/api/author/${author}/post/${post.blog_id}` class="edit-link") Edit
          div(class="vote-container")
            form(method="post" action=`/api/author/${author}/post/${post.blog_id}/upvote`)
              button(type="submit") &#8593
            p #{post.votes}
            form(method="post" action=`/api/author/${author}/post/${post.blog_id}/downvote`)
              button(type="submit") &#8595
          div(class="post-message") 
            p #{post.content}
          div(class="post-info")
            p 
              |Posted by 
              a() #{post.author} 
              |at #{post.created_at}