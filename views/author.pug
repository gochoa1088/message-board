extends layout

block content
  div(class="page-container")
    h3 #{title}
    ul(class="posts-list")
      each post in posts 
        li(class="post")
          a(href=`/${post.author}/${post.blog_id}` class="edit-link") Edit
          div(class="vote-container")
            form(method="post" action=`/${post.author}/${post.blog_id}/upvote`)
              button(type="submit") &#8593
            p #{post.votes}
            form(method="post" action=`/${post.author}/${post.blog_id}/downvote`)
              button(type="submit") &#8595
          div(class="post-message") 
            p #{post.content}
          div(class="post-info")
            p 
              |Posted by 
              a() #{post.author} 
              |at #{post.created_at}