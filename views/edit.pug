extends layout 

block content 
  div(class="page-container")
    h1(class="page-heading")=title
    form(method="POST", class="submit-container" action=`/author/${post[0].author}/post/${post[0].id}/edit` id="edit")
      a(href=`/author/${post[0].author}` class="back-arrow") &#8592 Back
      textarea(name="content", cols="30", rows="10") #{post[0].content}
      div(class="buttons-container")
        button(type="submit" form="delete") Delete
        button(type="submit" form="edit") Submit
    form(method="POST" action=`/author/${post[0].author}/post/${post[0].id}/delete` id="delete")
      
  