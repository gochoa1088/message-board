extends layout 

block content 
  div(class="page-container")
    h3()=title
    form(action="/" method="POST", class="submit-container" )
      a(href="/" class="back-arrow") &#8592 Back
      textarea(name="content", cols="30", rows="10") #{post[0].content}
      div(class="buttons-container")
        button() Delete
        button(type="submit") Submit
  